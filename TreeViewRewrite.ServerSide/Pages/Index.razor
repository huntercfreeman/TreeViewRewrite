@page "/"

@using TreeViewRewrite.ServerSide.TreeViews

<PageTitle>Index</PageTitle>

@{
    var treeViewNodeList = new int[] { 1, 2, 3, 4 }.Select(x => new TreeViewNode<int>(x, 0)).ToList();
}

<TreeViewDisplay TItem="int" NodeList="treeViewNodeList">
    <NodeRenderFragment Context="node">
        @node.Item
    </NodeRenderFragment>
    <ContextMenuRenderFragment Context="node">
        The target number is: @node.Item
    </ContextMenuRenderFragment>
</TreeViewDisplay>
