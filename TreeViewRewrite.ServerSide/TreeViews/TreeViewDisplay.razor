@typeparam TItem

<div id="@_htmlId"
     class="di_common_treeview"
     tabindex="-1"
     @onclick="HandleOnClick"
     @onkeydown="HandleOnKeyDown"
     @onfocus="HandleOnFocus"
     @onblur="HandleOnBlur"
     @oncontextmenu="HandleOnContextMenu"
     @oncontextmenu:preventDefault="@(ContextMenuRenderFragment is not null)">
    
    <div class="@CaretRowCssClass" style="height: @(_lineHeight)px; top: @(_caretRowTop)px;">
    </div>
    
    @{ var top = 0; }
    
    @foreach (var node in NodeList)
    {
        <div class="di_common_treeview-node" style="height: @(_lineHeight)px; top: @(top)px;">
            @NodeRenderFragment(node)
        </div>
        
        top += _lineHeight;
    }
    
    @if (_showContextMenu && ContextMenuRenderFragment is not null)
    {
        <div class="di_common_treeview-context-menu" style="top: @(_caretRowTop + _lineHeight)px;">
            @ContextMenuRenderFragment(_contextMenuTarget)
        </div>
    }
    
</div>